{{> header}}
<div class={{styles.layout}}>
  <form class={{styles.form}} action="/signup" method="post">
    <h1>Регистрация</h1>
    <ul>
      <li>
        <label for='email'>Почта</label>
        <input type="email" name="email" id='email'>
      </li>
      <li>
        <label for='login'>Логин</label>
        <input type="text" name="login" id='login'>
      </li>
      <li>
        <label for='name'>Имя</label>
        <input type="text" name="name" id='name'>
      </li>
      <li>
        <label for='lastname'>Фамилия</label>
        <input type="text" name="lastname" id='lastname'>
      </li>
      <li>
        <label for='phone'>Телефон</label>
        <input type="tel" name="phone" id='phone'>
      </li>
      <li>
        <label for='password'>Пароль</label>
        <input type="password" name="password" id='password'>
      </li>
      <li>
        <label for='anotherpassword'>Пароль (еще раз)</label>
        <input type="password" name="password" id='anotherpassword'>
      </li>
      <li>
        <button class={{styles.buttonDefault}} type="submit" name="submit">Зарегистрироваться</button>
      </li>
    </ul>
        <a class={{styles.button}} href='/login'>Войти</a>
  </form>
</div>