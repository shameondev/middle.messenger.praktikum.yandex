{
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["es6", "dom", "dom.iterable"],
    "outDir": "dist",
    "target": "es6",
    "strict": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "sourceMap": true,
    "isolatedModules": true
  }
}
