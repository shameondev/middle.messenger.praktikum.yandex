{
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["es2020", "dom", "dom.iterable"],
    "outDir": "dist",
    "target": "es2020",
    "strict": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "sourceMap": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  }
}
